<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{$DEVICE}</name>
            <config>
                <vlan xmlns="http://tail-f.com/ned/cisco-nx">
                    <vlan-list>
                        <id>{$VLAN_ID}</id>
                        <name>{$VLAN_NAME}</name>
                        <vn-segment>{$VNI_ID}</vn-segment>
                    </vlan-list>
                </vlan>
                <evpn xmlns="http://tail-f.com/ned/cisco-nx">
                    <vni>
                        <id>{$VNI_ID}</id>
                        <l2 />
                        <rd>auto</rd>
                        <route-target>
                            <method>import</method>
                            <rt>auto</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>auto</rt>
                        </route-target>
                    </vni>
                </evpn>
                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <nve>
                        <name>1</name>
                        <member>
                            <vni>
                                <id>{$VNI_ID}</id>
                                <mcast-group>{$MCAST_GROUP}</mcast-group>
                            </vni>
                        </member>
                    </nve>
                </interface>
            </config>
        </device>
    </devices>
</config-template>