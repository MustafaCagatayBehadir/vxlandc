<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{device/leaf-id}</name>
            <config>
                <vlan xmlns="http://tail-f.com/ned/cisco-nx">
                    <vlan-list>
                        <id>{network-vlan}</id>
                        <name>{$VLAN_NAME}</name>
                        <vn-segment>{l2vni}</vn-segment>
                    </vlan-list>
                </vlan>
                <evpn xmlns="http://tail-f.com/ned/cisco-nx">
                    <vni>
                        <id>{l2vni}</id>
                        <l2 />
                        <rd>auto</rd>
                        <route-target>
                            <method>import</method>
                            <rt>auto</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>auto</rt>
                        </route-target>
                    </vni>
                </evpn>
                <interface xmlns="http://tail-f.com/ned/cisco-nx" when="{../bd-subnet}">
                    <Vlan>
                        <name>{network-vlan}</name>
                        <vrf>
                            <member>{../vrf}</member>
                        </vrf>
                        <?foreach {../bd-subnet}?>
                        <ip when="{address-family='ipv4'}">
                            <address when="{preferred='yes'}">
                                <ipaddr>{address}</ipaddr>
                            </address>
                            <secondary-addr when="{preferred='no'}">
                                <address>
                                    <ipaddr>{address}</ipaddr>
                                    <secaddr>secondary</secaddr>
                                </address>
                            </secondary-addr>
                            <redirects>false</redirects>
                        </ip>
                        <ipv6 when="{address-family='ipv6'}">
                            <address>
                                <addresses>
                                    <addr>{address}</addr>
                                </addresses>
                            </address>
                            <redirects>false</redirects>
                        </ipv6>
                        <?end ?>
                        <?switch-context device?>
                        <fabric>
                            <forwarding>
                                <mode>anycast-gateway</mode>
                            </forwarding>
                        </fabric>
                    </Vlan>
                </interface>
                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <nve>
                        <name>1</name>
                        <member>
                            <vni>
                                <id>{l2vni}</id>
                                <mcast-group>{../mcast-group}</mcast-group>
                                <suppress-arp when="{../bd-subnet}" />
                            </vni>
                        </member>
                    </nve>
                </interface>
            </config>
        </device>
    </devices>
</config-template>