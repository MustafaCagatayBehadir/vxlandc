<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <?save-context service?>
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device when="{type='ethernet'}">
            <name>{ethernet/node}</name>
            <config>
                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <Ethernet>
                        <name tags="nocreate">{node-port}</name>
                        <?switch-context service?>
                        <enable>
                            <switchport>true</switchport>
                        </enable>
                        <switchport>
                            <mode>{mode}</mode>
                            <trunk when="{mode='trunk'}">
                                <allowed>
                                    <vlan>
                                        <ids>{vlan}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                            <access when="{mode='access'}">
                                <vlan>{vlan}</vlan>
                            </access>
                        </switchport>
                        <shutdown when="{shutdown}" />
                        <shutdown when="{not(shutdown)}" tags="delete" />
                        <description>{$DESCRIPTION}</description>
                        <mtu>9216</mtu>
                        <spanning-tree>
                            <bpduguard when="{connection='host'}">enable</bpduguard>
                            <guard when="{connection='switch'}">root</guard>
                            <port>
                                <type>edge</type>
                                <trunk when="{mode='trunk'}" />
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>{$BUM}</level>
                            </broadcast>
                            <unicast>
                                <level>{$BUM}</level>
                            </unicast>
                            <multicast>
                                <level>{$BUM}</level>
                            </multicast>
                            <action>
                                <trap when="{storm-control-action='trap'}" />
                                <shutdown when="{storm-control-action='shutdown'}" />
                            </action>
                        </storm-control>
                        <vpc when="{deref(ethernet/node)/../node-type='vpc'}">
                            <orphan-port>suspend</orphan-port>
                        </vpc>
                    </Ethernet>
                </interface>
            </config>
        </device>
        <device when="{type='port-channel'}">
            <name>{port-channel/node}</name>
            <config>
                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <port-channel>
                        <name>{allocated-port-channel-id}</name>
                        <?switch-context service?>
                        <enable>
                            <switchport>true</switchport>
                        </enable>
                        <switchport>
                            <mode>{mode}</mode>
                            <trunk when="{mode='trunk'}">
                                <allowed>
                                    <vlan>
                                        <ids>{vlan}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                            <access when="{mode='access'}">
                                <vlan>{vlan}</vlan>
                            </access>
                        </switchport>
                        <shutdown when="{shutdown}" />
                        <shutdown when="{not(shutdown)}" tags="delete" />
                        <description>{$DESCRIPTION}</description>
                        <mtu>9216</mtu>
                        <spanning-tree>
                            <bpduguard when="{connection='host'}">enable</bpduguard>
                            <guard when="{connection='switch'}">root</guard>
                            <port>
                                <type>edge</type>
                                <trunk when="{mode='trunk'}" />
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>{$BUM}</level>
                            </broadcast>
                            <unicast>
                                <level>{$BUM}</level>
                            </unicast>
                            <multicast>
                                <level>{$BUM}</level>
                            </multicast>
                            <action>
                                <trap when="{storm-control-action='trap'}" />
                                <shutdown when="{storm-control-action='shutdown'}" />
                            </action>
                        </storm-control>
                        <vpc when="{deref(ethernet/node)/../node-type='vpc'}">
                            <orphan-port>suspend</orphan-port>
                        </vpc>
                    </port-channel>
                    <Ethernet>
                        <name tags="nocreate">{node-port}</name>
                        <?switch-context service?>
                        <channel-group>
                            <id>{port-channel/allocated-port-channel-id}</id>
                            <mode>active</mode>
                        </channel-group>
                        <shutdown when="{shutdown}" />
                        <shutdown when="{not(shutdown)}" tags="delete" />
                        <description>{$MEMBER_DESCRIPTION}</description>
                        <mtu>9216</mtu>
                    </Ethernet>
                </interface>
            </config>
        </device>
        <device when="{type='vpc-port-channel'}">
            <name>{vpc-port-channel/node/name}</name>
            <config>
                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <port-channel>
                        <name>{allocated-port-channel-id}</name>
                        <?switch-context service?>
                        <enable>
                            <switchport>true</switchport>
                        </enable>
                        <switchport>
                            <mode>{mode}</mode>
                            <trunk when="{mode='trunk'}">
                                <allowed>
                                    <vlan>
                                        <ids>{vlan}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                            <access when="{mode='access'}">
                                <vlan>{vlan}</vlan>
                            </access>
                        </switchport>
                        <shutdown when="{shutdown}" />
                        <shutdown when="{not(shutdown)}" tags="delete" />
                        <description>{$DESCRIPTION}</description>
                        <mtu>9216</mtu>
                        <spanning-tree>
                            <bpduguard when="{connection='host'}">enable</bpduguard>
                            <guard when="{connection='switch'}">root</guard>
                            <port>
                                <type>edge</type>
                                <trunk when="{mode='trunk'}" />
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>{$BUM}</level>
                            </broadcast>
                            <unicast>
                                <level>{$BUM}</level>
                            </unicast>
                            <multicast>
                                <level>{$BUM}</level>
                            </multicast>
                            <action>
                                <trap when="{storm-control-action='trap'}" />
                                <shutdown when="{storm-control-action='shutdown'}" />
                            </action>
                        </storm-control>
                        <vpc>
                            <port-channel-number>{vpc-port-channel/allocated-port-channel-id}</port-channel-number>
                        </vpc>
                    </port-channel>
                    <Ethernet>
                        <name tags="nocreate">{node-port}</name>
                        <?switch-context service?>
                        <channel-group>
                            <id>{vpc-port-channel/allocated-port-channel-id}</id>
                            <mode>active</mode>
                        </channel-group>
                        <shutdown when="{shutdown}" />
                        <shutdown when="{not(shutdown)}" tags="delete" />
                        <description>{$MEMBER_DESCRIPTION}</description>
                        <mtu>9216</mtu>
                    </Ethernet>
                </interface>
            </config>
        </device>
    </devices>
</config-template>